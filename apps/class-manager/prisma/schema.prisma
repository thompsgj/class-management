datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  courseId  Course[]
  createdAt DateTime @default(now())
  firstName String?
  grades    Grade?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Course {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Grade {
  assignmentId GradedItem? @relation(fields: [ID], references: [id])
  ID           String?     @unique
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  score        Decimal?
  studentId    User?       @relation(fields: [ID], references: [id])
  ID           String?     @unique
  updatedAt    DateTime    @updatedAt
}

model GradedItem {
  activityType EnumGradedItemActivityType?
  createdAt    DateTime                    @default(now())
  deadline     DateTime?
  grades       Grade?
  id           String                      @id @default(cuid())
  maximum      Decimal?
  name         String?
  updatedAt    DateTime                    @updatedAt
}

enum EnumGradedItemActivityType {
  Attendance
  Assignment
  Activity
  Project
  Exam
}
